{
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "NodeNext",
    "target": "es2020",
    "resolveJsonModule": true,
    "checkJs": true,
    "allowJs": true,
    "moduleResolution": "NodeNext",
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "types"
  },
  "include": ["./src"]
}
